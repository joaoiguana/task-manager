<div class="container">
  <div class="page-header">
    <h1>EDIT: <%= @task.name %></h1>
  </div>

  <%= form_for(@task, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "Bucket", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.collection_select :bucket_id, Bucket.order(:name), :id, :name, {}, { class: "form-control" } %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :status, {}, "Completed", "Pending" %> Completed?
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_to "Delete Task", @task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
