<div class="container">
  <div class="page-header">
    <h1><%= @bucket.name %></h1>
  </div>
  <p class="lead"><%= @bucket.description %></p>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Pending Tasks</h3>
    </div>
    <ul class="list-group">
      <% @bucket.tasks_by_status("Pending").each do |task| %>
        <li class="list-group-item"><%= link_to task.name, task_path(task) %></li>
      <% end %>
    </ul>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Completed Tasks</h3>
    </div>
    <ul class="list-group">
      <% @bucket.tasks_by_status("Completed").each do |task| %>
        <li class="list-group-item"><%= link_to task.name, task_path(task) %></li>
      <% end %>
    </ul>
  </div>

  <%= button_to "Edit Bucket", edit_bucket_path(@bucket), method: :get, class: "btn btn-primary" %>
</div>
